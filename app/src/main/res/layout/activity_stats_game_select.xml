<?xml version="1.0" encoding="utf-8"?>
<me.fru1t.worddropper.ui.widget.ColoredLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:keepScreenOn="true"
        tools:context="me.fru1t.worddropper.ui.statsgameselect.StatsGameSelectActivity">
    <!-- Header -->
    <me.fru1t.worddropper.ui.widget.ColoredToolBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toolBarTitle="@string/statsGameSelectScreen_title" />

    <!-- Game List -->
    <me.fru1t.worddropper.ui.widget.ColoredTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:text="@string/statsGameSelectScreen_noGames"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/noDataWarning"/>
    <me.fru1t.worddropper.ui.widget.GameListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/gameList" />
</me.fru1t.worddropper.ui.widget.ColoredLinearLayout>
