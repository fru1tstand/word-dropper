<?xml version="1.0" encoding="utf-8"?>
<me.fru1t.worddropper.ui.widget.ColoredLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:orientation="vertical"
        android:id="@+id/endGameScreenRoot"
        tools:context=".ui.gamestats.GameStatsActivity">

    <!-- Title header -->
    <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />
    <me.fru1t.worddropper.ui.widget.ColoredTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/endGameScreen_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/endGameScreenGlobalTitle" />
    <me.fru1t.worddropper.ui.widget.ColoredTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/endGameScreen_subtitle"
            android:textSize="12sp"
            android:id="@+id/endGameScreenGlobalSubtitle"
            android:gravity="center_horizontal" />

    <!-- Content -->
    <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <!-- Scroll Wrapper -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- Difficulty -->
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <me.fru1t.worddropper.ui.widget.ColoredTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty"
                        app:backgroundColorTheme="background_light"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
            </FrameLayout>

            <!-- Side-by-side level and score-->
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/endGameScreenLevelTitle"
                            android:text="@string/endGameScreen_levelTitle"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textSize="36sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/endGameScreenLevelTitle" />
                </android.support.constraint.ConstraintLayout>

                <me.fru1t.worddropper.ui.widget.Divider
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        app:backgroundColorTheme="primary" />

                <android.support.constraint.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenScoreTitle"
                            android:text="@string/endGameScreen_scoreTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textSize="36sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/endGameScreenScoreTitle" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout> <!-- Side-by-side level and score-->

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

            <!-- Side-by-side scrambles and words-->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.333">
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenScramblesEarnedTitle"
                            android:text="@string/endGameScreen_scramblesEarnedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp" />
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenScramblesEarned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textSize="30sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/endGameScreenScramblesEarnedTitle" />
                </android.support.constraint.ConstraintLayout>

                <me.fru1t.worddropper.ui.widget.Divider
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        app:backgroundColorTheme="primary" />

                <android.support.constraint.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.333">
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenScramblesUsedTitle"
                            android:text="@string/endGameScreen_scramblesUsedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textSize="12sp" />
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenScramblesUsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/endGameScreenScramblesUsedTitle"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" />
                </android.support.constraint.ConstraintLayout>

                <me.fru1t.worddropper.ui.widget.Divider
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        app:backgroundColorTheme="primary" />

                <android.support.constraint.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.333">
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenWordsTitle"
                            android:text="@string/endGameScreen_wordsCreatedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textSize="12sp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp" />
                    <me.fru1t.worddropper.ui.widget.ColoredTextView
                            android:id="@+id/endGameScreenWords"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/endGameScreenWordsTitle"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout> <!-- Side-by-side scrambles and words-->

            <!-- Graphs-->
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/endGameScreen_sectionSpacing"
                        android:paddingBottom="2dp"
                        android:paddingLeft="@dimen/endGameScreen_edgeSpacing"
                        android:paddingRight="@dimen/endGameScreen_edgeSpacing"
                        android:id="@+id/endGameScreenGraphButtonsWrapper">
                    <TextView
                            android:text="@string/endGameScreen_graphWordLengths"
                            android:id="@+id/endGameScreenGraphWordLengths"
                            android:onClick="loadWordLengthGraph"
                            style="@style/EndGameScreen_GraphButton"/>
                    <Space style="@style/EndGameScreen_GraphButtonSpacer" />
                    <TextView
                            android:text="@string/endGameScreen_graphPointDistribution"
                            android:onClick="loadPointDistributionGraph"
                            android:id="@+id/endGameScreenGraphPointDistributionButton"
                            style="@style/EndGameScreen_GraphButton" />
                </LinearLayout>
            </HorizontalScrollView>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/endGameScreen_graphHeight"
                    android:id="@+id/endGameScreenGraphWrapper" />
            <!-- Graphs -->

            <!-- Summary Statistics/Game info -->
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            <!-- Summary -->

            <!-- Word list -->
            <me.fru1t.worddropper.ui.widget.ColoredTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/endGameScreenWordsList" />

        </LinearLayout> <!-- Scroll Wrapper -->
    </ScrollView>

    <!-- Actions footer -->
    <me.fru1t.worddropper.ui.widget.ColoredLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:backgroundColorTheme="background_light">
        <me.fru1t.worddropper.ui.widget.ColoredTextView
                android:text="@string/endGameScreen_actionPlayAgain"
                android:textSize="@dimen/endGameScreen_actionTextSize"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="@dimen/endGameScreen_actionsHeight"
                android:layout_weight=".5"
                android:id="@+id/endGameScreenActionPlayAgain"
                android:clickable="true"
                android:onClick="onActionPlayAgainClick" />
        <me.fru1t.worddropper.ui.widget.Divider
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/endGameScreenActionsSplitter"
                app:backgroundColorTheme="background" />
        <me.fru1t.worddropper.ui.widget.ColoredTextView
                android:text="@string/endGameScreen_actionMainMenu"
                android:textSize="@dimen/endGameScreen_actionTextSize"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="@dimen/endGameScreen_actionsHeight"
                android:layout_weight=".5"
                android:id="@+id/endGameScreenActionMainMenu"
                android:clickable="true"
                android:onClick="onActionMainMenuClick" />
    </me.fru1t.worddropper.ui.widget.ColoredLinearLayout> <!-- Actions Footer -->

</me.fru1t.worddropper.ui.widget.ColoredLinearLayout>
