<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/settings_itemTitleTextSize"
            android:id="@+id/title" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
                style="@style/Settings_ColorThemeColorBlock"
                android:id="@+id/colorThemePrimary" />
        <View
                style="@style/Settings_ColorThemeColorBlock"
                android:id="@+id/colorThemePrimaryDark" />
        <View
                style="@style/Settings_ColorThemeColorBlock"
                android:id="@+id/colorThemePrimaryLight" />
        <View
                style="@style/Settings_ColorThemeColorBlock"
                android:id="@+id/colorThemePrimaryBackgroundLight" />
        <View
                style="@style/Settings_ColorThemeColorBlock"
                android:id="@+id/colorThemeTextBlend" />
    </LinearLayout>
</merge>
