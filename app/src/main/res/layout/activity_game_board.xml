<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc"
        tools:context="me.fru1t.worddropper.activities.GameBoard">

    <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gameBoardUserLevelProgressHeight"
            android:maxHeight="@dimen/gameBoardUserLevelProgressHeight"
            android:minHeight="@dimen/gameBoardUserLevelProgressHeight"
            android:id="@+id/gameBoardUserLevel"
            android:max="100"
            android:progress="50" />

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/gameBoardTileWrapper">

    </FrameLayout>
</FrameLayout>
