<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>

        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowFullscreen">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <!--<item name="android:background">@color/black_overlay</item>-->
    </style>

    <!-- End Game Screen -->
    <style name="EndGameScreen_GraphButtonSpacer">
        <item name="android:layout_width">@dimen/endGameScreen_graphButtonSpacing</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EndGameScreen_GraphButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">@dimen/endGameScreen_graphButtonTextSize</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
