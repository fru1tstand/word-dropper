<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowFullscreen">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <!-- GameStats -->
    <style name="GameStats_GraphButtonSpacer">
        <item name="android:layout_width">@dimen/endGameScreen_graphButtonSpacing</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="GameStats_GraphButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">@dimen/endGameScreen_graphButtonTextSize</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="GameStats_SideBySide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GameStats_SideBySideDivider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundColorTheme">primary</item>
    </style>


    <!-- MainMenu -->
    <style name="MainMenuScreen_MenuWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">23dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MainMenuScreen_MenuOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MainMenuScreen_MenuOptionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="backgroundColorTheme">primary</item>
    </style>

    <!-- Settings -->
    <style name="Settings_ColorThemeColorBlock">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="Settings_SectionSpacer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">28dp</item>
    </style>
</resources>
